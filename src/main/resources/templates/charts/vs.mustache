{{#layout}}

    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>

    <div class="col-md-6">
        <form>
            <div class="form-group row">
                <div id="startDateContainer">
                    <div class="col-xs-2">
                        <i class="far fa-calendar"></i>
                        <label for="ex1">시작일</label>
                        <input class="form-control" id="startDate" type="text" placeholder="Ex : 10-25">
                    </div>
                </div>

                <div id="endDateContainer" style="padding-left:10px">
                    <div class="col-xs-2">
                        <i class="far fa-calendar"></i>
                        <label for="ex1">종료일</label>
                        <input class="form-control" id="endDate" type="text" placeholder="Ex : 10-26">
                    </div>
                </div>

                <div id="candidateContainer">
                    <div class="col-xs-2">
                        <i class="fas fa-user-tie"></i>
                        <label for="ex1">후보</label>
                        <input class="form-control" id="candidate" type="text" placeholder="Ex : 이재명 홍준표 윤석열">
                    </div>
                </div>

                <div id="sourceContainer" style="padding-left:10px">
                    <i class="fas fa-database"></i>
                    <select class="form-select form-select-sm" aria-label=".form-select-sm example" id="source">
                        <option value="naver">Naver</option>
                        <option value="twitter">Twitter</option>
                        <option value="both">Both</option>
                    </select>
                </div>
            </div>
        </form>

        <div style="margin-left:-10px">
            <button type="button" class="btn btn-primary" id="vsBtn">확정</button>
        </div>

        <div class="main">
            <div class="chart-container" style="position: relative; height:200h; width:70vw; left:10%;">
                <canvas id="chart"></canvas>
            </div>
        </div>

    </div>

{{/layout}}
<script src="/js/app/charts/vs.js"></script>