{{#layout}}

    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>

    <div class="col-md-6">
        <form>
            <div class="form-group row">
                <div id="startDateContainer">
                    <div class="col-xs-2">
                        <i class="far fa-calendar"></i>
                        <label for="ex1">시작일</label>
                        <input class="form-control" id="startDate" type="text" placeholder="Ex : 10-25">
                    </div>
                </div>

                <div id="endDateContainer" style="padding-left:10px">
                    <div class="col-xs-2">
                        <i class="far fa-calendar"></i>
                        <label for="ex1">종료일</label>
                        <input class="form-control" id="endDate" type="text" placeholder="Ex : 10-26">
                    </div>
                </div>

                <div id="candidateContainer">
                    <div class="col-xs-2">
                        <i class="fas fa-user-tie"></i>
                        <label for="ex1">후보</label>
                        <input class="form-control" id="candidate" type="text" placeholder="Ex : 이재명 홍준표 윤석열">
                    </div>
                </div>

                <div id="sourceContainer" style="padding-left:10px">
                    <i class="fas fa-database"></i>
                    <select class="form-select form-select-sm" aria-label=".form-select-sm example" id="source">
                        <option value="0">Naver</option>
                        <option value="1">Twitter</option>
                        <option value="2">Both</option>
                    </select>
                </div>
            </div>
        </form>

        <div style="margin-left:-10px">
            <button type="button" class="btn btn-primary" id="vsBtn">확정</button>
        </div>


        <div class="main">
            <div class="chart-container" style="position: relative; height:200h; width:70vw; left:10%;">
                <canvas id="chart"></canvas>
            </div>
        </div>

        <div id="compare">

        </div>

    </div>

    <div id="vsWeekContainer" >
        <i class="fas fa-calendar-week">여론조사</i>
        <select class="form-select form-select-sm" aria-label=".form-select-sm example" id="vs_week_select">
            <option value="0">2021-09-24 대선 후보 적합도</option>
            <option value="1">2021-10-04 대선 후보 적합도</option>
            <option value="2">2021-10-18 가상 다자 대결</option>
            <option value="3">2021-10-18 범보수권 대선 후보 적합도</option>
            <option value="4">2021-10-25 가상 다자 대결</option>
            <option value="5">2021-10-25 범보수권 대선 후보 적합도</option>
            <option value="6">2021-11-08 대선 후보 적합도</option>
        </select>
    </div>

{{/layout}}
<script src="/js/app/charts/vs.js"></script>